<h1></h1>

<p>
  <b><%= t('simple_form.labels.medication.name') %>:</b>
  <%= @medication.name %>
</p>

<p>
  <b><%= t('simple_form.labels.medication.generic_name') %>:</b>
  <%= @medication.generic_name %>
</p>

<p>
  <b><%= t('simple_form.labels.medication.nb_users') %>:</b>
  <%= @medication.prescriptions.count %>
</p>
<p>
  <b><%= t('simple_form.labels.medication.secondary_effects') %>:</b>
  <br>
	<ul>
	<% @facets.each do |term| %>   
	   <li><%= term["term"] %> (<%= term["count"] %>) </li>
	<% end %>               
	</ul>
</p>
<% if current_user && current_user.admin? %>
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th><%= t('simple_form.labels.medication.name') %></th>
      <th><%= t('simple_form.labels.medication.generic_name') %></th>
      <th>Platform</th>
      <th>Mobile</th>
      <th></th>
    </tr>
    <% @medication.prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.user.email %></td>
        <td>
          <% prescription.secondary_effects_array.each do |tag| %>
            <span class="label label-info"><%= tag %></span>
          <% end  %>
        </td>
        <td><%= prescription.user_agent_info['platform'] if prescription.user_agent_info %></td>
        <td><%= prescription.user_agent_info['is_mobile'] if prescription.user_agent_info %></td>
        <td>
          <%#= link_to 'Destroy', medication_path(medication.slug), confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to t(:"medications.add_effects"), new_medication_secondary_effect_path(@medication.slug) %> 
<br/>
<%= link_to t(:back), :back, :class=>"btn" %>
