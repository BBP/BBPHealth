<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th><%= t('simple_form.labels.medication.name') %></th>
    <th><%= t('simple_form.labels.medication.generic_name') %></th>
    <th><%= t('simple_form.labels.medication.secondary_effects') %></th>
    <% if admin_mode %>
      <th>Nb</th>
    <% end %>

    <th></th>
  </tr>

<% @medications.each do |medication| %>
  <tr>
    <td><%= medication.name %></td>
    <td><%= medication.generic_name %></td>
    <td>
      <% medication.secondary_effects_array.each do |tag| %>
        <span class="label label-info"><%= tag %></span>
      <% end  %>
    </td>
    <% if admin_mode %>
      <td>
        <%= medication.prescriptions.count %>
      </td>
    <% end %>

    <td>
      <%= link_to t(:show), medication_path(medication.slug) %> -
      <%= link_to t(:map), map_medication_path(medication.slug) %> -
      <%= link_to t(:"medications.add_effects"), new_medication_secondary_effect_path(medication.slug) %> 

      <% if admin_mode %>
        - <%= link_to t(:edit), edit_medication_path(medication.slug) %> 
        - <%= link_to 'Destroy', medication_path(medication.slug), confirm: 'Are you sure?', method: :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @medications %>